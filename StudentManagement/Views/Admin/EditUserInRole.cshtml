@model List<UserRoleViewModel>;
@{
	ViewBag.Title = "编辑角色中的用户";

	var roleId = ViewBag.roleId;
}

<form  method="post" asp-controller="Admin" asp-action="EditUserInRole" asp-route-roleId="@roleId">
	<input  type="hidden" value="@roleId"/>
	<div class="card">
		<div class="card-header">
			<h3>在此角色中添加或删除用户</h3>
		</div>
		<div class="card-body">
			@for (int i = 0; i < Model.Count; i++)
			{
			<div class="form-check m-1">
				<input asp-for="@Model[i].IsSelected" class="form-check-input" />

				<label class="form-check-label" asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
				<input type="hidden" asp-for="@Model[i].UserId" />
				<input type="hidden" asp-for="@Model[i].UserName" />
			</div>
			}
		</div>

		<div class="card-footer">
			<input type="submit" value="更新" class="btn btn-outline-success m-1" style="width:auto"/>

			<a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-outline-primary">取消</a>
		</div>
	</div>
</form>