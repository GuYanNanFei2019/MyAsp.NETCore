@model UserClaimViewModel;
@{
	ViewBag.Title = "管理用户声明";

	var userId = ViewBag.userId;
}

<form  method="post">
	<input hidden asp-for="@userId"/>
    <div class="card">
		<div class="card-header">
			<h3>管理用户声明</h3>
		</div>
		<div class="card-body">
			@for (int i = 0; i < Model.UserClaims.Count; i++)
			{
				<div class="form-check m-1">
					<input hidden asp-for="@Model.UserClaims[i].ClaimType"/>
					<input asp-for="@Model.UserClaims[i].IsSelected" class="form-check-input"/>
					<label class="form-check-label" asp-for="@Model.UserClaims[i].IsSelected">
						@Model.UserClaims[i].ClaimType
					</label>
				</div>
			}

			<div class="text-danger" asp-validation-summary="All"></div>
		</div>
		<div class="card-footer">
			<button type="submit" class="btn btn-outline-success">更新</button>
			<a asp-controller="Admin" asp-action="EditUser" asp-route-Id="@Model.UserId" class="btn btn-outline-primary">返回</a>
		</div>
    </div>
</form>